<%= form_tag connections_path, method: "post" do %>
  <%= hidden_field_tag(:receiver_id, @user.id) %>
  <%= submit_tag "Connect", :class => "btn btn-lg btn-primary" %>
<% end %>

<% if @connection and (@connection.receiver_id == current_user.id || @connection.initializer_id == current_user.id) %>
  <%= form_tag connection_path, method: "get" do %>
    <%= hidden_field_tag(:connection_id, @connection.id) %>
    <%= submit_tag "View Connection", :class => "btn btn-lg btn-primary" %>
  <% end %>
<% end %>

