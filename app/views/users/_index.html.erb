<% @users.each do |user| %>
<div id='list-container'>
  <div id='user-card' draggable='true' style='width:25%; float:left; border:solid 1px;border-radius:5px; margin: 5px; padding: 5px'>
  	<% my_avatar_url = "http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(user.email)}?s=150&d=monsterid" %>
  	<p><img src="<%= my_avatar_url %>" /></p>
    <p><%= link_to user.name, user_path(user.id) %></p>
    <p><%= user.about %></p>
    <p><%= user.name %> wants to learn:</p>
    <% user.skills.where(skill_type:"learn").each do |skill| %>
      <li><%= skill.description %></li>
    <% end %>
    <br />
    <p><%= user.name %> can teach:</p>
    <% user.skills.where(skill_type:"teach").each do |skill| %>
      <li><%= skill.description %></li>
    <% end %>
  </div>
</div>
<% end %>