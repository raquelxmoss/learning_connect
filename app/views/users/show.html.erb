 <div class="home">
   <% if can_edit_profile?(@user) %>
   <h1>Welcome, <%= @user.name.capitalize %></h1>
   <% end %>
 <div>
   // Profile image goes here
 </div>
 <div class ="col-md-6">
   <div  id="about">
     <h2>About <%= @user.name %></h2>
      <%= simple_format(@user.about) %>
   </div>

   <div id = "availability">
     <h2>I'm available at these times:</h2>
     <%= simple_format(@user.availability) %>
   </div>
   <% if can_edit_profile?(@user) %>
     <%= render partial: "sessionbuttons"%>
     
    <% @connections.each do |connection| %>
      <li>Connection with <%= link_to current_user.name == connection.initializer.name ? connection.receiver.name : connection.initializer.name, connection %></li>
    <% end %>
   <% end %>

</div>
<div class ="col-md-6">
  <% if !can_edit_profile?(@user) %>
    <p><%= render partial: "connectbutton"%></p>
  <% end %>
  <div id="teach">
   <h2>I can teach:</h2>
   <%= render partial: "skills_division", locals: {skills: @teaching_skills, skill_type: 'teach'} %>
  </div>

  <div id="learn">
   <h2>I'm keen to learn:</h2>
   <%= render partial: "skills_division", locals: {skills: @learning_skills, skill_type: 'learn'} %>
  </div>

  <div id='search'>
   <p>
     <%= form_tag(skills_list_path, remote: true,:method => 'post', id: "search_form") do %>
       <%= text_field_tag :search, params[:search], placeholder: 'search skills' %>
       <%= submit_tag "search" %>
     <% end %>
   </p>
  </div>

  <div id='search_results'></div>
</div>




