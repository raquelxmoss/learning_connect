<%= form_for(:skill, url: create_skill_path(@user.id)) do |f| %>
  <%= f.text_field :description, class:"form-control" %>
  <%= f.hidden_field :skill_type, :value=>skill_type %>
  <%= f.hidden_field :user_id, :value=>"#{current_user.id}"%>
  <%= f.submit value='new skill' ,class:"add-skill btn btn-default"%>
<% end %>