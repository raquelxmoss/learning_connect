<h2>Update Lesson</h2>


<%= form_for [@connection,@course] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br />
  <%= f.label :price %>
  <%= f.number_field :price %><br />
  <%= f.label :status %>
  <%= f.select :status, ['pending', 'agreed'] %><br />
  <%= f.label :tutor_id %>
  <%= f.select :tutor_id, @users.map{|user| [user.name,user.id]} %><br />
  <%= f.label :length %>
  <%= f.number_field :length %><br />
  <%= f.submit %>
<% end %>
  